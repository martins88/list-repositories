<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewItemRepository"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_small"
        android:elevation="@dimen/margin_padding_medium"
        app:cardCornerRadius="@dimen/margin_padding_small"
        android:layout_marginBottom="@dimen/margin_padding_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageViewItemRepositoryAvatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginTop="@dimen/margin_padding_small"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_default_image" />

            <TextView
                android:id="@+id/textViewItemRepositoryNameRepository"
                android:layout_width="0dp"
                android:textSize="@dimen/text_medium2"
                android:textStyle="bold"
                android:textColor="@color/material_black"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginTop="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageViewItemRepositoryAvatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="architecture-samples"/>

            <TextView
                android:id="@+id/textViewItemRepositoryNameUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:textSize="@dimen/text_medium"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:textColor="@color/material_grey500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageViewItemRepositoryAvatar"
                app:layout_constraintTop_toBottomOf="@+id/textViewItemRepositoryNameRepository"
                tools:text="android" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerItemRepositoryBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginTop="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:layout_marginBottom="@dimen/margin_padding_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageViewItemRepositoryAvatar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewItemRepositoryStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_star" />

                <TextView
                    android:id="@+id/textViewStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_padding_small"
                    android:textColor="@color/material_black"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewItemRepositoryStar"
                    app:layout_constraintStart_toEndOf="@+id/imageViewItemRepositoryStar"
                    app:layout_constraintTop_toTopOf="@+id/imageViewItemRepositoryStar"
                    tools:text="38978" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewItemRepositoryFork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewStars"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_fork" />

                <TextView
                    android:id="@+id/textViewItemRepositoryForks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_padding_small"
                    android:textColor="@color/material_black"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewItemRepositoryFork"
                    app:layout_constraintStart_toEndOf="@+id/imageViewItemRepositoryFork"
                    app:layout_constraintTop_toTopOf="@+id/imageViewItemRepositoryFork"
                    tools:text="10725" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>